@media screen and (max-width: 500px)
  header
    margin: 40px auto 10px
    .site-title
      a
        font-size: 14px
  #main > ul > li
    padding: 18px 0 20px
    flex-direction: column
    div.info
      margin: 0
    img
      margin: 0
  #main > ul > li:first-child
    margin-top: -35px
  #main h3.date
    font-size: 11px
    position: static
    margin-top: 10px
    align-self: flex-start
  #main > ul > li img.index-cover
    width: 80%
  #main article.post
    line-height: 22px
    h1
      font-size: 28px
      line-height: 34px
    h2
      font-size: 22px
      line-height: 28px
    h3
      font-size: 20px
      line-height: 25px
    
